#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo '🏗️👷 Styling, testing and building your project before committing'

# Check Prettier standards
npm run format ||
(
    echo '😭 Prettier Check Failed. Please run command: "npm run format", and then add changes and try commit again.⛔️⛔️⛔️';
    false;
)

# Check ESLint Standards
npm run eslint ||
(
        echo '😤 ESLint Check Failed. Make the required changes listed above, add changes and try to commit again.⛔️⛔️⛔️'
        false; 
)


echo '✅✅✅✅ You win this time... I am committing this now. ✅✅✅✅'
